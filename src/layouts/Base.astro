---
import "../styles/reset.css";
import "../styles/global.css";
import "@fontsource/libre-baskerville";
import "@fontsource/libre-baskerville/700.css";
import "@fontsource/libre-baskerville/400-italic.css";
import "@fontsource-variable/jetbrains-mono";
import AnimatedBackground from "@components/AnimatedBackground.astro";
import Head from "@components/Head.astro";

const { pageTitle, description, readingMode } = Astro.props;
---

<html lang="en">
  <head>
    <Head title={pageTitle} description={description} />
  </head>
  <body>
    <AnimatedBackground
      animateStatic={!readingMode}
    />
    <div class="content">
      <nav class="animate">
        <a href="/">home</a>::
        <a href="/blog/">blog</a>::
        <a href="/now/">now</a>
      </nav>
      <main>
        <slot />
      </main>
      <footer>
        <span>Copyright &copy; {new Date().getFullYear()} Artemis Rosman</span>
        <span>This version of the website was built on {new Date().toLocaleString('en-AU', {})}</span>
      </footer>
    </div>
  </body>
</html>

<style>
  .content {
    display: flex;
    flex-direction: column;
    align-items: center;
    overflow-x: hidden;
    overflow-y: auto;
    width: 100%;
    height: 100%;
  }

  nav {
    width: 100%;
    color: var(--hero-color);
    display: flex;
    flex-wrap: wrap;
    padding: 0 0.5em;

    font-size: 2rem;
    font-family: "JetBrains Mono Variable", monospace;
    font-weight: 400;
  }

  nav > a {
    background-color: transparent;
    color: var(--uhl-color);

    outline: none;
    border: none;
    text-decoration: none;
  }

  nav > a:hover {
    color: var(--hero-color);
    opacity: 100%;
  }

  footer {
    padding-top: 1em;
    display: flex;
    flex-direction: column;
    align-items: center;
    margin-top: auto;
    margin-bottom: 0.5em;
    color: var(--uhl-color);
    font-size: 0.7rem;
  }
</style>
