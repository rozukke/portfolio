---
import "../styles/reset.css"
import "../styles/global.css"
import '@fontsource/libre-baskerville';
import '@fontsource/libre-baskerville/700.css';
import '@fontsource/libre-baskerville/400-italic.css';
import '@fontsource-variable/fira-code';
import AnimatedBackground from "@components/AnimatedBackground.astro";
import Head from "@components/Head.astro";

const {pageTitle, description, readingMode} = Astro.props;
---

<html lang="en">
	<head>
		<Head title={pageTitle} description={description} />
	</head>
	<body>
		<AnimatedBackground
		showPicture={!readingMode}
		showStatic={!readingMode}
		animateStatic={!readingMode}
		/>
		<div class="content">
			<nav>
				<a href="/">home</a>::
				<a href="/experience/">experience</a>::
				<a href="/projects/">projects</a>::
				<a href="/blog/">blog</a>
			</nav>
			<main>
				<slot/>
			</main>
			<footer>
				<span>Copyright &copy; {new Date().getFullYear()} Artemis Rosman</span>
			</footer>
		</div>
	</body>
</html>

<style>
	.content {
		display: flex;
		flex-direction: column;
		align-items: center;
		overflow-x: hidden;
		overflow-y: auto;
		width: 100%;
	}

	nav {
		width: 100%;
		color: var(--hero-color);
		display: flex;
		flex-wrap: wrap;
		padding-left: 0.5em;

		font-size: 2rem;
		font-family: "Fira Code Variable", monospace;
		font-weight: 400;
	}

	nav>a {
		background-color: transparent;
		color: var(--uhl-color);

		outline: none;
		border: none;
		text-decoration: none;
	}

	nav>a:hover {
		color: var(--hero-color);
		opacity: 100%;
	}

	footer {
		margin-top: 1em;
		color: grey;
		font-size: 0.7rem;
	}
</style>
