---
import "../styles/reset.css"
import "../styles/global.css"
import AnimatedBackground from "@components/AnimatedBackground.astro";

const {pageTitle, description, showPicture, showStatic, animateStatic} = Astro.props;
---

<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta
			name="viewport"
			content="width=device-width, initial-scale=1.0"
		/>
		<title>{pageTitle}</title>

		<meta
			name="description"
			content="View my projects, experience and other fun tidbits."
		/>
		<meta
			name="keywords"
			content="rozukke artemis rosman dev programming portfolio coding github developer website blog"
		/>
		<meta name="author" content="rozukke" />

		<meta property="og:title" content={pageTitle} />
		<meta
			name="og:description"
			content={description}
		/>
		<meta name="og:site_name" content="rozukke.dev" />
		<meta name="og:locale" content="en_AU" />
		<meta name="og:type" content="website" />
		<meta name="og:url" content="https://rozukke.dev" />
		<!--<meta name="og:image" content="http://rozukke.dev/favicon.png">-->

		<!--<link rel="icon" href="favicon.png" type="image/png">-->
		<!--<link rel="shortcut icon" type="favicon.png" href="image/x-icon">-->

		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link
			rel="preconnect"
			href="https://fonts.gstatic.com"
			crossorigin
		/>
		<link
			href="https://fonts.googleapis.com/css2?family=Space+Mono:ital,wght@0,400;0,700;1,400;1,700&family=Chivo:ital,wght@0,100..900;1,100..900&display=swap"
			rel="stylesheet"
		/>
	</head>
	<body>
		<AnimatedBackground
				showPicture={showPicture}
				showStatic={showStatic}
				animateStatic={animateStatic}
		/>
		<nav>
			<a href="/">home</a>::
			<a href="/experience/">experience</a>::
			<a href="/projects/">projects</a>::
			<a href="/blog/">blog</a>
		</nav>
		<slot/>
		<footer>
			<span class="copyright">Copyright Â© {new Date().getFullYear()} Artemis Rosman</span>
		</footer>
	</body>
</html>

<style>
nav {
	width: 100%;
	color: var(--hero-color);
	display: inline-flex;
	padding-left: 0.5em;

	font-size: 2rem;
	font-family: "Space Mono", monospace;
	font-weight: 400;
}

nav>a {
	background-color: transparent;
	color: var(--text-color);
	opacity: 40%;

	outline: none;
	border: none;
	text-decoration: none;
}

nav>a:hover {
	color: var(--hero-color);
	opacity: 100%;
}
</style>
