const {pageTitle, description, showPicture, showStatic, animateStatic} = Astro.props;
---

<html lang="en">
	</head>
	<body>
		<AnimatedBackground
				showPicture={showPicture}
				showStatic={showStatic}
				animateStatic={animateStatic}
		/>
		<nav>
			<a href="/">home</a>::
			<a href="/experience/">experience</a>::
			<a href="/projects/">projects</a>::
			<a href="/blog/">blog</a>
		</nav>
		<slot/>
