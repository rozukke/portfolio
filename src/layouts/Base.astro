---
import "../styles/reset.css"
import "../styles/global.css"
import '@fontsource/libre-baskerville';
import '@fontsource/libre-baskerville/700.css';
import '@fontsource/libre-baskerville/400-italic.css';
import '@fontsource-variable/fira-code';
import AnimatedBackground from "@components/AnimatedBackground.astro";

const {pageTitle, description, readingMode} = Astro.props;
---

<html lang="en">
	</head>
	<body>
		<AnimatedBackground
		showPicture={!readingMode}
		showStatic={!readingMode}
		animateStatic={!readingMode}
		/>
		<nav>
			<a href="/">home</a>::
			<a href="/experience/">experience</a>::
			<a href="/projects/">projects</a>::
			<a href="/blog/">blog</a>
		</nav>
		<slot/>
		<footer>
			<span>Copyright &copy {new Date().getFullYear()} Artemis Rosman</span>
		</footer>
	</body>
</html>

<style>
	nav {
		width: 100%;
		color: var(--hero-color);
		display: inline-flex;
		padding-left: 0.5em;

		font-size: 2rem;
		font-family: "Fira Code Variable", monospace;
		font-weight: 400;
	}

	nav>a {
		background-color: transparent;
		color: var(--text-color);
		opacity: 40%;

		outline: none;
		border: none;
		text-decoration: none;
	}

	nav>a:hover {
		color: var(--hero-color);
		opacity: 100%;
	}

	footer {
		margin-top: 1em;
		color: grey;
	}
</style>
