---
const {url, title, date, shortDesc} = Astro.props;
const dateFormatter = new Intl.DateTimeFormat("en-AU", {
  dateStyle: "medium",
});
---

<a href={url}>
  <div class="blog-post">
    <div>
      <h3>{title}</h3>
      <p>{shortDesc}</p>
      <span class="date">{dateFormatter.format(new Date(date))}</span>
    </div>
    <div>

    </div>
  </div>
</a>

<style>
.blog-post {
  padding: 1em 1.5em;
  border-radius: 10px;
  margin-top: 20px;

  background-color: var(--bg-color-transparent);
  color: white;
}

.blog-post h3 {
  margin-top: 0px;
}

.blog-post:hover {
  border: 1px solid white;
}

.date {
  color: gray;
  font-family: "Space Mono", monospace;
}

a {
  text-decoration: none;
}

p {
  margin-bottom: 2px;
}
</style>
